<Window x:Class="TestTrainee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:headerrelated="clr-namespace:TestTrainee.Components.HeaderRelated"
        mc:Ignorable="d"
        Title="CryptoApp"
        WindowStyle="None"
        MinHeight="450" 
        MinWidth="800"
        MouseLeftButtonDown="DragEvent"
        >
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" CornerRadius="0" GlassFrameThickness="0"  />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="60" />
            <!--Content Section-->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <headerrelated:Header />
        <Rectangle Grid.Row="1" Fill="{StaticResource BgColor}" />
    </Grid>
</Window>
